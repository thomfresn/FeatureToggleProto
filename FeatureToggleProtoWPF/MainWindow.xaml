<Window x:Class="FeatureToggleProtoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeatureToggleProtoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="converter" />
    </Window.Resources>
    <Grid>
        <CheckBox Content="{Binding ProUserMessageDisplayed}" HorizontalAlignment="Left" Margin="85,46,0,0" VerticalAlignment="Top" IsChecked="{Binding IsAdmin}"/>
        <Button Content="Pro action only" Visibility="{Binding IsNewProFeatureVisible, Converter={StaticResource converter}}" HorizontalAlignment="Left" Margin="85,89,0,0" VerticalAlignment="Top" Width="201"/>

    </Grid>
</Window>
